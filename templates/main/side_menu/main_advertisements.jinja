{% extends 'base.jinja' %}
{% load template_tags %}
{% block advertise %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 card" style="padding:0;">
                {% main_advertisements as advertisers %}
                {% for advertiser in advertisers %}
                    <div class="carousel slide" data-ride="carousel" id="carouselExampleIndicators">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ forloop.counter }}" {% if forloop.first %}class="active"{% endif %}></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item {% if forloop.first %}active{% endif %}">
                                <a href="{{ advertiser.link }}">
                                    <img class="d-block img-fluid hidden-md-down" style="width:100%; height:180px;" src="{{ advertiser.banner.url }}" alt="Responsive-image">
                                    <img class="d-block img-fluid hidden-sm-down hidden-lg-up" style="width:100%; height:180px;" src="{{ advertiser.banner_md.url }}" alt="Responsive-image">
                                    <img class="d-block img-fluid hidden-md-up" style="width:100%; height:180px;" src="{{ advertiser.banner_sm.url }}" alt="Responsive-image">
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock advertise %}
{% block content %}
{% endblock content %}
{% block domready %}
    <script>
        $(document).ready(function(){
            $('.carousel').carousel({
                interval:20000
            });
        });
    </script>
{% endblock domready %}